{
    "author": "Brandon Scott https://github.com/brandongregoryscott",
    "dependencies": {
        "twitter-v2": "1.1.0"
    },
    "description": "A typed wrapper around the Twitter V2 API",
    "devDependencies": {
        "@types/faker": "5.1.7",
        "@types/jest": "26.0.15",
        "cross-env": "7.0.3",
        "dotenv": "8.2.0",
        "faker": "5.4.0",
        "jest": "26.4.2",
        "prettier": "1.19.1",
        "rimraf": "2.6.2",
        "ts-jest": "26.4.4",
        "typedoc": "0.20.30",
        "typedoc-neo-theme": "1.1.0",
        "typedoc-plugin-merge-modules": "1.0.0",
        "typescript": "4.0.3"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "files": [
        "dist"
    ],
    "keywords": [
        "api",
        "typescript",
        "twitter",
        "twitter-api",
        "twitter-client"
    ],
    "license": "Apache-2.0",
    "main": "dist/index.js",
    "name": "ts-twitter-provider",
    "repository": {
        "type": "git",
        "url": "git@github.com:brandongregoryscott/ts-twitter-provider.git"
    },
    "scripts": {
        "build": "tsc --project tsconfig.dist.json",
        "clean": "rimraf dist docs",
        "docs": "typedoc",
        "format": "prettier --write \"src/**/*.ts\" --trailing-comma es5",
        "postbuild": "npm run docs",
        "postpublish": "cross-env-shell \"git add -A && git commit -m \"$npm_package_version\" && git push origin main\"",
        "prebuild": "npm run clean && npm run format && echo Using TypeScript && tsc --version",
        "prepublishOnly": "npm run build",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "version": "0.5.0"
}
